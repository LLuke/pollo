<?xml version="1.0"?>

<!-- Display Specification for use with Cocoon Sitemap editor. 
     This file specifies the colors to use, and which attributes
	 to show on an element.
-->

<!-- author: Bruno Dumon (bruno.dumon@advalvas.be)             -->

<displayspec xmlns:map="http://apache.org/cocoon/sitemap/1.0">

	<element name="map:pipelines">
		<display type="block"/>
		<background-color red="224" green="238" blue="224"/>
	</element>
	<element name="map:pipeline">
		<display type="block"/>
		<background-color red="115" green="230" blue="161"/>
		<showattributes names="internal-only"/>
	</element>
	<element name="map:parameter">
		<display type="block"/>
		<background-color red="230" green="230" blue="230"/>
		<showattributes names="name,value"/>
	</element>
	<element name="map:generate">
		<display type="block"/>
		<background-color red="195" green="207" blue="195"/>
		<showattributes names="type,src"/>
	</element>
	<element name="map:transform">
		<display type="block"/>
		<background-color red="219" green="232" blue="219"/>
		<showattributes names="type,src"/>
	</element>
	<element name="map:serialize">
		<display type="block"/>
		<background-color red="230" green="244" blue="230"/>
		<showattributes names="type,status-code,mime-type"/>
	</element>
	<element name="map:match">
		<display type="block"/>
		<background-color red="151" green="161" blue="230"/>
		<showattributes names="type,pattern"/>
	</element>
	<element name="map:redirect-to">
		<display type="block"/>
		<background-color red="214" green="214" blue="132"/>
		<showattributes names="uri,resource,session"/>
	</element>
	<element name="map:mount">
		<display type="block"/>
		<background-color red="195" green="207" blue="195"/>
		<showattributes names="src,uri-prefix,reload-method,check-reload"/>
	</element>
	<element name="map:read">
		<display type="block"/>
		<background-color red="195" green="207" blue="195"/>
		<showattributes names="type,src,mime-type"/>
	</element>
	<element name="map:aggregate">
		<display type="block"/>
		<background-color red="184" green="166" blue="188"/>
		<showattributes names="ns,prefix"/>
	</element>
	<element name="map:part">
		<display type="block"/>
		<background-color red="220" green="198" blue="224"/>
		<showattributes names="src,element,ns,prefix,strip-root"/>
	</element>
	<element name="map:act">
		<display type="block"/>
		<background-color red="237" green="180" blue="180"/>
		<showattributes names="type,set,action"/>
	</element>
	<element name="map:label">
		<display type="block"/>
		<background-color red="255" green="255" blue="255"/>
		<showattributes names="name"/>
	</element>
	<element name="map:select">
		<display type="block"/>
		<background-color red="156" green="209" blue="173"/>
		<showattributes names="type"/>
	</element>
	<element name="map:when">
		<display type="block"/>
		<background-color red="156" green="209" blue="173"/>
		<showattributes names="test"/>
	</element>
	<element name="map:otherwise">
		<display type="block"/>
		<background-color red="156" green="209" blue="173"/>
	</element>
	<element name="map:handle-errors">
		<display type="block"/>
		<background-color red="229" green="146" blue="146"/>
	</element>

	<element name="map:resources">
		<display type="block"/>
		<background-color red="132" green="168" blue="216"/>
		<showattributes names="name"/>
	</element>
	<element name="map:resource">
		<display type="block"/>
		<background-color red="237" green="180" blue="180"/>
		<showattributes names="name"/>
	</element>

	<element name="map:views">
		<display type="block"/>
		<background-color red="132" green="168" blue="216"/>
		<showattributes names="name"/>
	</element>
	<element name="map:view">
		<display type="block"/>
		<background-color red="237" green="180" blue="180"/>
		<showattributes names="name,from-label,form-position"/>
	</element>

	<element name="map:action-sets">
		<display type="block"/>
		<background-color red="132" green="168" blue="216"/>
	</element>
	<element name="map:action-set">
		<display type="block"/>
		<background-color red="230" green="184" blue="115"/>
		<showattributes names="name"/>
	</element>





	<element name="map:sitemap">
		<display type="block"/>
		<background-color red="181" green="181" blue="204"/>
	</element>

	<element name="map:components">
		<display type="block"/>
		<background-color red="230" green="184" blue="115"/>
	</element>

	<element name="map:generators">
		<display type="block"/>
		<background-color red="192" green="204" blue="181"/>
		<showattributes names="default"/>
	</element>

	<element name="map:transformers">
		<display type="block"/>
		<background-color red="192" green="204" blue="181"/>
		<showattributes names="default"/>
	</element>

	<element name="map:readers">
		<display type="block"/>
		<background-color red="192" green="204" blue="181"/>
		<showattributes names="default"/>
	</element>

	<element name="map:serializers">
		<display type="block"/>
		<background-color red="192" green="204" blue="181"/>
		<showattributes names="default"/>
	</element>

	<element name="map:selectors">
		<display type="block"/>
		<background-color red="192" green="204" blue="181"/>
		<showattributes names="default"/>
	</element>

	<element name="map:matchers">
		<display type="block"/>
		<background-color red="192" green="204" blue="181"/>
		<showattributes names="default"/>
	</element>

	<element name="map:actions">
		<display type="block"/>
		<background-color red="192" green="204" blue="181"/>
	</element>

	<element name="map:generator">
		<display type="block"/>
		<background-color red="181" green="204" blue="202"/>
		<showattributes names="name,src"/>
	</element>

	<element name="map:transformer">
		<display type="block"/>
		<background-color red="181" green="204" blue="202"/>
		<showattributes names="name,src"/>
	</element>

	<element name="map:reader">
		<display type="block"/>
		<background-color red="181" green="204" blue="202"/>
		<showattributes names="name,src"/>
	</element>

	<element name="map:serializer">
		<display type="block"/>
		<background-color red="181" green="204" blue="202"/>
		<showattributes names="name,src,mime-type"/>
	</element>

	<element name="map:selector">
		<display type="block"/>
		<background-color red="181" green="204" blue="202"/>
		<showattributes names="name,src"/>
	</element>

	<element name="map:matcher">
		<display type="block"/>
		<background-color red="181" green="204" blue="202"/>
		<showattributes names="name,src"/>
	</element>

	<element name="map:action">
		<display type="block"/>
		<background-color red="181" green="204" blue="202"/>
		<showattributes names="name,src"/>
	</element>
</displayspec>
